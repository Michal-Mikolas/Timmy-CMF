<h3>{$link->name}</h3>
{block #linksControl}
  <ul>
  {foreach $link->childs as $child}
    <li n:class="$child->active? 'active'">
      <a href="{=$child->href}" n:class="$child->active? 'active'">{$child->name}</a>
      {if count($child->childs)}{include #linksControl, link => $child}{/if}
    </li>
  {/foreach}
  </ul>
{/block}